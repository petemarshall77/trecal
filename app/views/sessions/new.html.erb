<div class="min-h-full flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-sm">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 px-8 py-10">
      <h1 class="text-2xl font-bold text-gray-900 mb-6 text-center">Treecal</h1>

      <% if alert = flash[:alert] %>
        <div class="bg-red-50 border border-red-200 text-red-700 text-sm rounded px-3 py-2 mb-5">
          <%= alert %>
        </div>
      <% end %>

      <%= form_with url: session_url do |form| %>
        <div class="mb-4">
          <%= form.label :email_address, "Email", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.email_field :email_address,
              required: true, autofocus: true, autocomplete: "username",
              value: params[:email_address],
              class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div class="mb-6">
          <%= form.label :password, "Password", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.password_field :password,
              required: true, autocomplete: "current-password", maxlength: 72,
              class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <%= form.submit "Sign in",
            class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
