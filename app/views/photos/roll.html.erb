<div class="max-w-full">
  <h2 class="text-xl font-semibold text-gray-800 mb-4">Camera Roll</h2>

  <% if @photos.any? %>
    <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-7 xl:grid-cols-9 gap-2">
      <% @photos.each do |photo| %>
        <%= link_to photo_path(photo), class: "flex flex-col items-center gap-1 group" do %>
          <div class="aspect-square w-full rounded overflow-hidden border border-gray-200">
            <%= image_tag photo.image,
                class: "w-full h-full object-cover group-hover:opacity-80 transition-opacity",
                alt: photo.taken_on.strftime("%B %-d, %Y") %>
          </div>
          <span class="text-xs text-gray-500 group-hover:text-gray-800 text-center">
            <%= photo.taken_on.strftime("%b %-d, %Y") %>
          </span>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 text-gray-500">
      <p class="mb-3">No photos yet.</p>
      <%= link_to "Upload your first photo", new_photo_path,
          class: "text-blue-600 hover:underline text-sm" %>
    </div>
  <% end %>
</div>
